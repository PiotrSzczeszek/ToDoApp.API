{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "Default": "Server=(localdb)\\MSSQLLocalDb;Database=TodoApp;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "AllowedHosts": "*",
  "Auth": {
    "Jwt": {
      "ValidIssuer": "",
      "ValidAudience": "",
      "AccessTokenNotBeforeSeconds": "0",
      "AccessTokenValidForSeconds": "300",
      "RefreshTokenValidForMinutes": "60",
      "SecretKey": "ThisIsSecretKey1234$"
    },
    "Password": {
      "RequiredLength": 4,
      "RequiredUniqueChars": 1,
      "RequireLowercase": false,
      "RequireUppercase": false,
      "RequireDigit": false,
      "RequireNonAlphanumeric": false
    }
  }
}
